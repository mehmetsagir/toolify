{
  "name": "toolify",
  "version": "0.0.20",
  "build": {
    "appId": "com.toolify.app",
    "productName": "Toolify",
    "icon": "resources/icon.png",
    "afterPack": "scripts/afterPack.js",
    "mac": {
      "category": "public.app-category.utilities"
    }
  },
  "description": "AI-powered voice transcription and translation tool for macOS",
  "main": "./out/main/index.js",
  "author": "",
  "license": "MIT",
  "homepage": "https://github.com/mehmetsagir/toolify",
  "repository": {
    "type": "git",
    "url": "https://github.com/mehmetsagir/toolify.git"
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "build:skip-check": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "prebuild:mac": "node scripts/copy-whisper-executables.js && node scripts/build-apple-stt.js",
    "prebuild:dmg": "node scripts/copy-whisper-executables.js && node scripts/build-apple-stt.js",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac --publish never",
    "build:mac:publish": "electron-vite build && electron-builder --mac --publish always",
    "build:dmg": "npm run build:skip-check && npx electron-builder --mac dmg --publish never",
    "build:linux": "electron-vite build && electron-builder --linux",
    "prepare": "husky"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "openai": "^6.9.1",
    "uiohook-napi": "^1.5.4"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^22.18.6",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.22",
    "clsx": "^2.1.1",
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "lucide-react": "^0.554.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "terser": "^5.46.0",
    "typescript": "^5.9.2",
    "vfile": "^6.0.3",
    "vite": "^7.1.6",
    "vitest": "^4.0.16",
    "whisper-node": "^1.1.1"
  }
}
